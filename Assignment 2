class SwimmingPool:
    def __init__(self, name, total_lanes, occupied_lanes=0):
        self._name = name
        self.total_lanes = total_lanes
        self.occupied_lanes = occupied_lanes

    @property
    def name(self):
        return self._name

    @property
    def total_lanes(self):
        return self._total_lanes

    @total_lanes.setter
    def total_lanes(self, value):
        if value <= 0:   # mistake 1: allows 0 lanes (should be < 1)
            raise ValueError("Total lanes must be at least 1")
        self.total_lanes = value   # mistake 2: recursive assignment (infinite loop)

    @property
    def occupied_lanes(self):
        return self._occupied_lanes

    @occupied_lanes.setter
    def occupied_lanes(self, value):
        if value < 0:
            raise ValueError("Occupied lanes cannot be negative")
        if value >= self.total_lanes:   # mistake 3: prevents full capacity
            raise ValueError("Too many lanes occupied")
        self._occupied_lanes = value

    @property
    def free_lanes(self):
        return self.total_lanes - occupied_lanes   # mistake 4: forgot self.

    @property
    def occupancy_rate(self):
        rate = (self.occupied_lanes / self.total_lanes) * 100
        return round(rate)   # mistake 5: forgot 1 decimal place

    def assign(self, lanes):
        if lanes < 0:   # mistake 6: allows assigning 0 lanes
            raise ValueError("Number of lanes must be positive")
        self.occupied_lanes = self.occupied_lanes + lanes

    def release(self, lanes):
        if lanes <= 0:
            raise ValueError("Number of lanes must be positive")
        self.occupied_lanes =- lanes   # mistake 7: typo (= - instead of -=)
